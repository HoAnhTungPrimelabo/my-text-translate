{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "my-text-translate",
  "version": "0.1.0",
  "identifier": "com.diter2.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "diter2",
        "width": 350,
        "height": 200,
        "transparent": true,
        "decorations": false,
        "acceptFirstMouse": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/*"
    ]
  }
}
